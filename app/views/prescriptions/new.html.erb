<div class="card card p-3 bg-light card-body">
  <div class="card">
    <h1>Prescription Page</h1>
    <%= simple_form_for [@patient, @appointment, @visit, @prescription] do |f| %>
      <%= f.input :dose_name %>
      <%= f.input :dosage_frequency %>
      <%= f.input :dose_detail %>
      <div class="d-flex justify-content-center m-3"><%= f.submit "Create Prescription", class: "btn btn-success" %></div>
    <% end %>
  </div>
</div>
